.metrics {
    display: flex
    flex-direction: row
    justify-content: space-between
    padding: 2rem;
    position relative
}

.metric {
    background-color: colorSecondary
    color: colorTextInverse
    border-radius:1rem;
    display: flex;
    flex-direction: column;
    padding:0
    // width:18%
    margin-right:20px
    h1 {
        font-size:1.8rem
    }
    h2 {
        color: colorPrimary
    }
}

.metric:last-child {
    margin-right: 0;
}

.metric-count {
    font-size:3rem
    line-height:3rem
    font-weight:600
    padding:1rem
    text-align: center
    width:100%
}

.metric-label {
    background:colorSecondaryLight
    color: colorSecondary
    border-radius: 0 0 1rem 1rem
    font-size:0.7rem
    font-weight:600
    padding:0.5rem 1rem
    margin-top:auto;
    text-align: center
    text-transform: uppercase
    width:100%
}

.metric-date {
    background-color:colorBackgroundBase;
    background-image: url(/assets/img/profile2.svg);
    background-position: 40px bottom;
    background-repeat: no-repeat;
    flex: 5
    padding:2rem 2rem 2rem 10rem
}

